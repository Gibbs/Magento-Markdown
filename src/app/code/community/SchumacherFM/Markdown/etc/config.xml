<?xml version="1.0"?>
<!--* @category    SchumacherFM_Markdown-->
<!--* @package     etc-->
<!--* @author      Cyrill at Schumacher dot fm / @SchumacherFM-->
<!--* @copyright   Copyright (c)-->
<config>
    <modules>
        <SchumacherFM_Markdown>
            <version>1.0.0</version>
        </SchumacherFM_Markdown>
    </modules>

    <global>
        <models>
            <markdown>
                <class>SchumacherFM_Markdown_Model</class>
            </markdown>
        </models>
        <resources>
            <markdown_setup>
                <setup>
                    <module>SchumacherFM_Markdown</module>
                </setup>
            </markdown_setup>
        </resources>
        <blocks>
            <markdown>
                <class>SchumacherFM_Markdown_Block</class>
            </markdown>
        </blocks>
        <helpers>
            <markdown>
                <class>SchumacherFM_Markdown_Helper</class>
            </markdown>
        </helpers>
    </global>
    <frontend>
        <events>
            <cms_page_render>
                <observers>
                    <markdown_renderer>
                        <class>markdown/markdown_render</class>
                        <method>renderPageObserver</method>
                    </markdown_renderer>
                </observers>
            </cms_page_render>

            <core_block_abstract_to_html_after>
                <observers>
                    <markdown_renderer>
                        <class>markdown/markdown_render</class>
                        <method>renderBlockObserver</method>
                    </markdown_renderer>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <markdown before="Mage_Adminhtml">SchumacherFM_Markdown_Adminhtml</markdown>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <markdown>
                    <file>markdown.xml</file>
                </markdown>
            </updates>
        </layout>
        <translate>
            <modules>
                <SchumacherFM_Markdown>
                    <files>
                        <default>SchumacherFM_Markdown.csv</default>
                    </files>
                </SchumacherFM_Markdown>
            </modules>
        </translate>
        <events>
            <cms_wysiwyg_config_prepare>
                <observers>
                    <markdown_observer>
                        <class>markdown/editor_observer</class>
                        <method>prepareWysiwygPluginConfig</method>
                    </markdown_observer>
                </observers>
            </cms_wysiwyg_config_prepare>

        </events>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <SchumacherFM_Markdown/>
            </modules>
        </suite>
    </phpunit>
</config>